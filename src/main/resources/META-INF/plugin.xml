<idea-plugin>
    <id>ee.taltech.gtm-enhanced</id>
    <name>Gtm Enhanced</name>
    <vendor email="tavo.annus@gmail.com" url="https://github.com/kilpkonn/gtm-enhanced">GTM Enhanced</vendor>
    <idea-version since-build="202"/>

    <description><![CDATA[
        Plugin for integration with <b>gtm-enhanced</b> for smooth time tracking.
        <br/> <br/>
        Tracks all times spend editing files within git repository as well as run / build events. <br/>
        Tracked time is saved as git notes and therefore can be pulled / pushed to git as well. <br/>
        <br/>
        Installation consists of 2 steps: <br/>
            1) Install gtm executable from https://github.com/kilpkonn/gtm-enhanced<br/>
            2) Install plugin from Jetbrains IDE<br/>
        <br/>
        <b>NB! To enable time tracking in repository you have to manually type "gtm init" in terminal whilst in project directory.</b><br/>
        <br/>
        All bugs and feature requests shall be reported to <a href="https://github.com/kilpkonn/gtm-enhanced">GitHub</a>
      ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <editorFactoryMouseListener implementation="ee.taltech.gtm.listener.CustomEditorMouseListener"/>
        <fileDocumentManagerListener implementation="ee.taltech.gtm.listener.CustomSaveListener"/>
        <editorFactoryDocumentListener implementation="ee.taltech.gtm.listener.CustomDocumentListener"/>
        <testStatusListener implementation="ee.taltech.gtm.listener.CustomTestStatusListener"/>

        <statusBarWidgetFactory implementation="ee.taltech.gtm.widget.GtmWidgetFactory"
                                id="ee.taltech.gtm.widget.GtmWidgetFactory"
                                order="first" />
    </extensions>

    <projectListeners>
        <listener class="ee.taltech.gtm.listener.CustomBuildProcessListener"
                  topic="com.intellij.build.BuildProgressListener"/>
        <listener class="ee.taltech.gtm.listener.CustomVisibleAreaListener"
                  topic="com.intellij.openapi.editor.event.VisibleAreaListener"/>
        <listener class="ee.taltech.gtm.listener.CustomProcessListener"
                  topic="com.intellij.execution.ExecutionListener" />
    </projectListeners>


    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>