<idea-plugin>
    <id>ee.taltech.gtm-jetbrains</id>
    <name>Gtm-Jetbrains</name>
    <vendor email="tavo.annus@gmail.com" url="">TODO</vendor>

    <description>TODO
        aaaaaaaaaaaaaaa
    </description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <editorFactoryMouseListener implementation="ee.taltech.gtm.listener.CustomEditorMouseListener"/>
        <fileDocumentManagerListener implementation="ee.taltech.gtm.listener.CustomSaveListener"/>
        <editorFactoryDocumentListener implementation="ee.taltech.gtm.listener.CustomDocumentListener"/>
        <testStatusListener implementation="ee.taltech.gtm.listener.CustomTestStatusListener"/>

        <statusBarWidgetFactory implementation="ee.taltech.gtm.widget.GtmWidgetFactory"
                                id="ee.taltech.gtm.widget.GtmWidgetFactory
"
                                order="first" />
    </extensions>

    <projectListeners>
        <listener class="ee.taltech.gtm.listener.CustomProjectTaskListener"
                  topic="com.intellij.task.ProjectTaskListener"/>
        <listener class="ee.taltech.gtm.listener.CustomBuildProcessListener"
                  topic="com.intellij.build.BuildProgressListener"/>
    </projectListeners>


    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>